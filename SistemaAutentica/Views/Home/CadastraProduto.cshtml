
@model SistemaAutentica.Models.Produto

@{
    ViewData["Title"] = "Cadastro de Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>@ViewBag.Title</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastraProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NotaID" class="control-label"></label>
                <select asp-for="NotaID" class="form-control">
                    <option value="">--Selecione Nota Fiscal--</option>
                    @foreach (var item in ViewBag.LISTA)
                    {

                        <option value="@item.NotaID">@item.Numero</option>
                    }
                </select>
                <span asp-validation-for="NotaID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Custo" class="control-label"></label>
                <input asp-for="Custo" class="form-control" />
                <span asp-validation-for="Custo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unidade" class="control-label"></label>
                <input asp-for="Unidade" class="form-control" />
                <span asp-validation-for="Unidade" class="text-danger"></span>
            </div>
           
            
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

